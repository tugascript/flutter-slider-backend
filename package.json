{
  "name": "flutter-slider-backend",
  "version": "1.0.0",
  "description": "Flutter Slider Backend",
  "author": "Afonso Barracha",
  "private": true,
  "license": "MIT",
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "node dist/main",
    "start:dev": "nest start --watch",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "migrate:create": "npx mikro-orm schema:create --run",
    "migrate:update": "npx mikro-orm schema:update --run"
  },
  "dependencies": {
    "@aws-sdk/client-s3": "^3.54.1",
    "@mikro-orm/core": "^5.1.0",
    "@mikro-orm/nestjs": "^5.0.1",
    "@mikro-orm/postgresql": "^5.1.0",
    "@mikro-orm/sqlite": "^5.1.0",
    "@nestjs/common": "^8.4.1",
    "@nestjs/config": "^2.0.0",
    "@nestjs/core": "^8.4.1",
    "@nestjs/graphql": "^10.0.7",
    "@nestjs/mercurius": "^10.0.7",
    "@nestjs/platform-fastify": "^8.4.1",
    "@nestjs/serve-static": "^2.2.2",
    "bcrypt": "^5.0.1",
    "cache-manager": "^3.6.0",
    "cache-manager-ioredis": "^2.1.0",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.13.2",
    "dayjs": "^1.11.0",
    "fastify-cookie": "^5.6.0",
    "fastify-cors": "^6.0.3",
    "fastify-csrf": "^3.1.0",
    "fastify-helmet": "^7.0.1",
    "fastify-static": "^4.6.1",
    "graphql": "^16.3.0",
    "graphql-upload": "^13.0.0",
    "ioredis": "^4.28.5",
    "joi": "^17.6.0",
    "jsonwebtoken": "^8.5.1",
    "mercurius": "^9.3.5",
    "mercurius-cache": "^1.7.0",
    "mercurius-upload": "^3.0.1",
    "nodemailer": "^6.7.2",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^3.0.2",
    "rxjs": "^7.5.5",
    "sharp": "^0.30.3",
    "slugify": "^1.6.5",
    "uuid": "^8.3.2"
  },
  "devDependencies": {
    "@faker-js/faker": "^6.0.0",
    "@mikro-orm/cli": "^5.1.0",
    "@nestjs/cli": "^8.2.3",
    "@nestjs/schematics": "^8.0.8",
    "@nestjs/testing": "^8.4.1",
    "@types/bcrypt": "^5.0.0",
    "@types/cache-manager": "^3.4.2",
    "@types/cache-manager-ioredis": "^2.0.2",
    "@types/graphql-upload": "^8.0.11",
    "@types/jest": "27.4.1",
    "@types/jsonwebtoken": "^8.5.8",
    "@types/node": "^17.0.21",
    "@types/nodemailer": "^6.4.4",
    "@types/sharp": "^0.30.0",
    "@types/supertest": "^2.0.11",
    "@types/uuid": "^8.3.4",
    "@typescript-eslint/eslint-plugin": "^5.15.0",
    "@typescript-eslint/parser": "^5.15.0",
    "eslint": "^8.11.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.0.0",
    "jest": "^27.5.1",
    "prettier": "^2.6.0",
    "source-map-support": "^0.5.21",
    "supertest": "^6.2.2",
    "ts-jest": "^27.1.3",
    "ts-loader": "^9.2.8",
    "ts-node": "^10.7.0",
    "tsconfig-paths": "^3.14.0",
    "typescript": "^4.6.2"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  },
  "mikro-orm": {
    "useTsNode": true,
    "configPaths": [
      "./src/mikro-orm.config.ts",
      "./dist/mikro-orm.config.js"
    ]
  },
  "engines": {
    "node": "16.14.1"
  }
}
